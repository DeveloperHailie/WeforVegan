<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text = "화면에 바코드를 담아주세요"
            android:textSize = "21dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/barcode_btn"
            android:layout_gravity="center"/>
        <!-- 바코드 넣을 자리 -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorLightGray"
            android:text="제품 사진"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/tomatosauce"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorBlueGreen"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="식품 정보"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="54dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:text="제품명: "
                android:textSize="15dp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="청정원 구운마늘과 양파 토마토 스파게티 소스"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="68dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:text="원재료명: "
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/result_text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="다이스트토마토(토마토, 토마토주스, 구연산, 염화칼슘), 정제수, 토마토페이스트, 양파, 대두유, 설탕, 블랙올리브, 치킨액기스, 정제소금, 마늘, 양파, 흑후추, 대두, 정제소금, 마늘, 밀, 쇠고기, 닭고기, 굴"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

        </LinearLayout>
        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorRed"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="섭취불가 원재료"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/result_text3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:text="치킨액기스, 쇠고기, 닭고기, 굴"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>