<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/close_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_close_24px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/api_recipe_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/close_btn"
                android:text="API 레시피"
                android:textColor="@color/colorBlack"
                android:textSize="17dp"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/favorite_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/favorite"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/api_recipe_name"
                android:textColor="@color/colorBlack"
                android:text="RECIPE_NAME"
                android:textSize="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:background="@drawable/rec_circle"
                android:backgroundTint="#e5eecc"
                />

            <ImageView
                android:id="@+id/api_recipe_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_below="@+id/api_recipe_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/api_recipe_ingredient_txt"
                android:textColor="@color/colorBlack"
                android:text="재료"
                android:textSize="17dp"
                android:layout_below="@+id/api_recipe_img"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="#e5eecc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/api_recipe_ingredient_txt"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:id="@+id/api_recipe_ingredient"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/api_recipe_txt"
                android:textColor="@color/colorBlack"
                android:text="요리법"
                android:textSize="17dp"
                android:layout_below="@+id/api_recipe_ingredient"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="#e5eecc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/api_recipe_txt"
                android:id="@+id/api_recipe_recipe"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>