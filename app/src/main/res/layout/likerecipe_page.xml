<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rec_circle"
        android:backgroundTint="@color/colorBlueGreen"
        android:text="내가 찜한 레시피 모아보기"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow>

                        <FrameLayout android:layout_margin="5dp">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                tools:srcCompat="@drawable/manrecipe" />

                            <Button
                                android:id="@+id/heart1"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/ic_favorite_black_24dp"
                                android:backgroundTint="@color/colorRed"></Button>
                        </FrameLayout>

                        <FrameLayout android:layout_margin="5dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                tools:srcCompat="@drawable/manrecipe" />

                            <Button
                                android:id="@+id/heart2"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/ic_favorite_black_24dp"
                                android:backgroundTint="@color/colorRed"></Button>
                        </FrameLayout>

                        <FrameLayout android:layout_margin="5dp">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                tools:srcCompat="@drawable/instagram" />

                            <Button
                                android:id="@+id/heart3"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="bottom|end"
                                android:background="@drawable/ic_favorite_black_24dp"
                                android:backgroundTint="@color/colorRed"></Button>
                        </FrameLayout>
                    </TableRow>

                    <TableRow android:paddingLeft="5dp">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="만개의 레시피"
                            android:textColor="@color/colorBlack"
                            android:textSize="9dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="만개의 레시피"
                            android:textColor="@color/colorBlack"
                            android:textSize="9dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="인스타그램"
                            android:textColor="@color/colorBlack"
                            android:textSize="9dp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow android:paddingLeft="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가지 스테이크"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="유기농 버섯 잡채"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="버섯 탕수"
                            android:textSize="12dp" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TableRow>
                    <FrameLayout
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:srcCompat="@drawable/twitter" />
                        <Button
                            android:id="@+id/heart4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/ic_favorite_black_24dp"
                            android:backgroundTint="@color/colorRed">
                        </Button>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:srcCompat="@drawable/instagram" />
                        <Button
                            android:id="@+id/heart5"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/ic_favorite_black_24dp"
                            android:backgroundTint="@color/colorRed">
                        </Button>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_margin="5dp">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            tools:srcCompat="@drawable/twitter" />
                        <Button
                            android:id="@+id/heart6"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/ic_favorite_black_24dp"
                            android:backgroundTint="@color/colorRed">
                        </Button>
                    </FrameLayout>
                </TableRow>

                <TableRow
                    android:paddingLeft="5dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="트위터"
                        android:textColor="@color/colorBlack"
                        android:textSize="9dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인스타그램"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="트위터"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="9dp"/>
                </TableRow>

                <TableRow
                    android:paddingLeft="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가지 스테이크"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="유기농 버섯 잡채"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="버섯 탕수"
                        android:textSize="12dp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>