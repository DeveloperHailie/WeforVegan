<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/colorGray">
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="회원 정보 페이지입니다"
        android:textColor="@color/colorGray"/>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="@color/colorGray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorOrange"
                android:text="아이디"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/rec_box"
                android:ems="8"
                android:textAlignment="center"
                android:hint=" 10-20자 이내 "
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <Button
                android:id="@+id/id_check"
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorGray"
                android:gravity="center"
                android:text="중복확인"
                android:textColor="@android:color/white"
                android:textSize="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorOrange"
                android:text="비밀번호"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/edit_pwd"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/rec_box"
                android:ems="8"
                android:textAlignment="center"
                android:hint="10자 이상으로 입력해주세요"
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorOrange"
                android:text="비밀번호 확인"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/edit_pwd_check"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/rec_box"
                android:ems="8"
                android:textAlignment="center"
                android:hint=""
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:background="@drawable/rec_circle"
                android:backgroundTint="@color/colorOrange"
                android:text="휴대전화"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/rec_box"
                android:ems="8"
                android:textAlignment="center"
                android:hint=" - 없이 작성해주세요"
                android:inputType="textPassword"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rec_circle"
        android:backgroundTint="@color/colorBlueGreen"
        android:text="채식 스타일"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="35px"
        android:layout_marginTop="50px"
        android:layout_marginRight="20px">

        <Button
            android:id="@+id/vegan1_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorGray"
            android:text="비건\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vegan1_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorBlueGreen"
            android:text="비건\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/vegan2_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorGray"
            android:text="락토\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vegan2_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorBlueGreen"
            android:text="락토\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/vegan3_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorGray"
            android:text="오보\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/vegan3_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorBlueGreen"
            android:text="오보\n채식"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/vegan4_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorGray"
            android:text="락토오보\n채식"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="visible" />


        <Button
            android:id="@+id/vegan4_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rec_circle"
            android:backgroundTint="@color/colorBlueGreen"
            android:text="락토오보\n채식"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="수정하기" />
    </LinearLayout>
</LinearLayout>